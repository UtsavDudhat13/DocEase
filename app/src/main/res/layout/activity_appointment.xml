<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AppointmentActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_8sdp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_doctor"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:src="@drawable/doctor1"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_info"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_13sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dr. Utsav Dudhat"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Specialist"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dentist"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Experience"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5 years"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9051243687"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email ID"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="und@gmail.com"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/edtReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:padding="@dimen/_16sdp"
                android:drawableStart="@drawable/round_edit_24"
                android:background="@drawable/bg_edittext"
                android:hint="Reason (like: Fever)"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:drawablePadding="@dimen/_12sdp"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_14ssp"/>


            <EditText
                android:id="@+id/edtDateOfAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_16sdp"
                android:drawablePadding="@dimen/_12sdp"
                android:drawableStart="@drawable/round_calendar_today_24"
                android:background="@drawable/bg_edittext"
                android:hint="Select Date For Appointment"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edtTimeOfAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_16sdp"
                android:drawablePadding="@dimen/_12sdp"
                android:drawableStart="@drawable/round_access_time_24"
                android:background="@drawable/bg_edittext"
                android:hint="Select Time For Appointment"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/colorPrimaryText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Appointment"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_14sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/bg_button"
                android:textColor="@color/white"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>