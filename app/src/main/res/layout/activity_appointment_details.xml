<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.doctor.AppointmentDetailsActivity">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_8sdp"
                android:layout_gravity="center"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_patient"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:src="@drawable/doctor1"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_info"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_13sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_patient_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Utsav Dudhat"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reason"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fever"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11/11/2023"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11 : 11"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginBottom="@dimen/_13sdp"
                    android:layout_marginHorizontal="@dimen/_13sdp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorSecondaryText"/>
                    <TextView
                        android:id="@+id/tv_patient_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1023654790"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimaryText"/>
                </LinearLayout>
            </LinearLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Appointment"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginHorizontal="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_14sdp"
        android:padding="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:background="@drawable/bg_button"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_confirmed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/_13sdp"
        android:background="@drawable/bg_status"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginVertical="@dimen/_14sdp"
        android:padding="@dimen/_14sdp"
        android:text="Appointment Confirmed"
        android:textSize="@dimen/_14sdp"
        android:visibility="gone" />

</RelativeLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>